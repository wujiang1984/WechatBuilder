<?xml version="1.0"?>
<configuration>
	<!-- appSettings网站信息配置-->
	<configSections>
		<sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
			<section name="WechatBuilder.Web.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false"/>
		</sectionGroup>
	</configSections>
	<appSettings>
		<add key="Configpath" value="~/xmlconfig/site.config"/>
		<add key="Urlspath" value="~/xmlconfig/urls.config"/>
		<add key="Userpath" value="~/xmlconfig/user.config"/>
		<add key="Orderpath" value="~/xmlconfig/order.config"/>
		<add key="nati_suffix" value="wxref=mp.weixin.qq.com"/><!--浏览器兼容性问题：url添加后缀 添加时间：2013-11-20 -->
	</appSettings>
	<!-- 数据库连接字符串-->
	<connectionStrings>
    <add name="DBString" connectionString="server=.;uid=sa;pwd=123123;database=WechatBuilder;"/>
	</connectionStrings>
	<system.web>
		<compilation debug="true" targetFramework="4.0"/>
		<!--
            通过 <authentication> 节可以配置
            安全身份验证模式，ASP.NET 
            使用该模式来识别来访用户身份。 
        -->
		<authentication mode="Windows"/>
		<!--
            如果在执行请求的过程中出现未处理的错误，
            则通过 <customErrors> 节
            可以配置相应的处理步骤。具体而言，
            开发人员通过该节可配置要显示的 html 错误页，
            以代替错误堆栈跟踪。

        <customErrors mode="RemoteOnly" defaultRedirect="GenericErrorPage.htm">
            <error statusCode="403" redirect="NoAccess.htm" />
            <error statusCode="404" redirect="FileNotFound.htm" />
        </customErrors>
        -->
		<httpModules>
			<add type="WechatBuilder.Web.UI.HttpModule, WechatBuilder.Web.UI" name="HttpModule"/>
		</httpModules>
		<httpHandlers>
			<add verb="*" path="templates/green/*.html" type="System.Web.HttpForbiddenHandler"/>
		</httpHandlers>
		<!-- 文件上传大小KB-->
		<httpRuntime maxRequestLength="512000" executionTimeout="3600" requestValidationMode="2.0"/>
		<pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/>
	</system.web>
	<applicationSettings>
		<WechatBuilder.Web.Properties.Settings>
			<setting name="WechatBuilder_Web_lzcats_ILzServices" serializeAs="String">
				<value>http://sms.fgezi.com/Modules/Interface/ILzServices.asmx</value>
			</setting>
		</WechatBuilder.Web.Properties.Settings>
	</applicationSettings>
	<system.webServer>
		<defaultDocument>
		</defaultDocument>
    <validation validateIntegratedModeConfiguration="false"/>
    <directoryBrowse enabled="true"/>
	</system.webServer>
 <system.serviceModel>
  <bindings />
  <client />
 </system.serviceModel>
</configuration>
